{% extends 'adminbase.html.twig' %}
{% block title  %}
	Category List

{% endblock %}
{% block content %}
	<!-- partial -->
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">
							Category Form</h4>
						<button>
							<a href="{{ path('app_admin_category_new') }}">Add
							</a>
						</button>

						<div class="table-responsive"></div>
						<div class="card">
							<div class="card-body">

								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>Id</th>
												<th>Title</th>
												<th>Keywords</th>
												<th>Description</th>
												<th>Status</th>
												<th>Slug</th>
												<th>Edit</th>
												<th>Delete</th>
											</tr>
										</thead>
										<tbody>
											{% for rs in categoryList %}
												<tr>
													<td>{{ rs.id }}</td>
													<td>{{ rs.title }}</td>
													<td>{{ rs.keywords }}</td>
													<td>{{ rs.description }}</td>
													<td>{{ rs.status }}</td>
													<td>{{ rs.slug }}</td>
													<td>
														<a href="{{ path('app_admin_category_edit',{'id': rs.id })}}" class="badge badge-danger">Edit
														</a>
													</td>
													<td>
														<a href="{{ path('app_admin_category_delete',{'id': rs.id }) }}" class="badge badge-danger" onclick="return confirm ('Silmek istediÄŸinize emin misiniz ?');">Delete
														</a>
													</td>
												</tr>
											{% endfor %}

										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
