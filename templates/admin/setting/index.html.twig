{% extends 'adminbase.html.twig' %}

{% block title %}Product List
{% endblock %}

{% block body %}
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">
							Product List</h4>

						<div class="table-responsive"></div>
						<div class="card">
							<div class="card-body">

								<div class="table-responsive">


									<table class="table">
										<thead>
											<tr>
												<th>Id</th>
												<th>Title</th>
												<th>Company</th>
												<th>Adress</th>
												<th>Phone</th>
												<th>Fax</th>
												<th>Email</th>
												<th>Status</th>
												<th>actions</th>
											</tr>
										</thead>
										<tbody>
											{% for setting in settings %}
												<tr>
													<td>{{ setting.id }}</td>
													<td>{{ setting.title }}</td>
													<td>{{ setting.company }}</td>
													<td>{{ setting.adress }}</td>
													<td>{{ setting.phone }}</td>
													<td>{{ setting.fax }}</td>
													<td>{{ setting.email }}</td>
													<td>{{ setting.status }}</td>
													<td>
														<a href="{{ path('app_admin_setting_edit', {'id': setting.id}) }}"class="btn btn-success" >Edit</a>
													</td>
												</tr>
											{% else %}
												<tr>
													<td colspan="23"><a href="{{ path('app_admin_setting_new') }}" class="btn btn-success">Create new</a></td>
												</tr>
											{% endfor %}
										</tbody>
									</table>

									
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
