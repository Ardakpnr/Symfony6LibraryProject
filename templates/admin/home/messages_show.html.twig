{% extends 'adminbase.html.twig' %}
{% block title  %}Contact Mesajları
{% endblock %}
{% block content %}
	<!-- partial -->
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">
							Contact Messages Details</h4>

						<div class="table-responsive"></div>
						<div class="card">
							<div class="card-body">

								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>Id</th>
												<td>{{ rs.id }}</td>
											</tr>
											<tr>
												<th>Name</th>

												<td>{{ rs.name }}</td>
											</tr>
											<tr>
												<th>Email</th>
												<td>{{ rs.email }}</td>
											</tr>
											<tr>
												<th>Phone</th>
												<td>{{ rs.phone }}</td>
											</tr>
											<tr>
												<th>Subject</th>
												<td>{{ rs.subject }}</td>
											</tr>
											<tr>
												<th>Message</th>
												<td>{{ rs.message }}</td>
											</tr>
											<tr>
												<th>Status</th>
												<td>{{ rs.status}}</td>
											</tr>
											<tr>
												
												<td>
													<a href="{{ path('app_admin_messages') }}" class="badge badge-danger">Listeye Dön
													</a>
												</td>
												<td>
													<a href="{{ path('app_admin_messages_delete',{'id': rs.id }) }}" class="badge badge-danger" onclick="return confirm ('Silmek istediğinize emin misiniz ?');">Delete
													</a>
												</td>
											</tr>
										</thead>
										<tbody></tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
