{% extends 'adminbase.html.twig' %}

{% block title %}Product List
{% endblock %}
{% block head %}
<SCRIPT language="JavaScript" type="text/javascript">
	function openWin( windowURL, windowName, windowFeatures) { window.open( windowURL, windowName, windowFeatures);}
</SCRIPT>
{% endblock %}
{% block body %}
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">
							Product List</h4>

						<div class="table-responsive"></div>
						<div class="card">
							<div class="card-body">

								<div class="table-responsive">

									<table class="table">
										<thead>
											<tr>
												<th>Id</th>
												<th>Category</th>
												<th>Title</th>
												<th>Keywords</th>
												<th>Image</th>
												<th>IGallery</th>
												<th>Price</th>
												<th>Quantiy</th>
												<th>Status</th>
												<th>actions</th>
											</tr>
										</thead>
										<tbody>
											{% for product in products %}
												<tr>
													<td>{{ product.id }}</td>
													<td>{{ product.category.title }}</td>
													<td>{{ product.title }}</td>
													<td>{{ product.keywords }}</td>
													<td>
                                                        <img src="{{ asset ('uploads/images/' ~ product.image) }}" style="height:100px; width:100px">
                                                    </td>
													<td>
														<a href="javascript:openWin('{{ path('app_admin_image_new', {'pid': product.id})}}','', 'toolbar=no, location=no, directories=0, status=no, top=50, left=100, menuBar=no, scrollBars=yes, resizable=no, width=900, height=600')">
														<img src="{{ asset('assets/admin/images') }}/galleryimg.png" height="100px" width:"100px" title="Image Gallery"
                                                        
                                                    </td>
													<td>{{ product.price }}</td>
													<td>{{ product.quantiy }}</td>
													<td>{{ product.status }}</td>
													<td>
														<a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-success">show</a>
														<a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-success">edit</a>
													</td>
												</tr>
											{% else %}
												<tr>
													<td colspan="11">no records found</td>
												</tr>
											{% endfor %}
										</tbody>
									</table>

									<a href="{{ path('app_admin_product_new') }}" class="btn btn-success">Create new</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
